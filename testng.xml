<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Puma Test Suite" parallel="tests" thread-count="3">

    <!-- Test for Chrome -->
    <test name="Chrome Tests" verbose="2">
        <parameter name="browserType" value="chrome" />
        <classes>
            <class name="puma.tests.HomePageTests" />
            <class name="puma.tests.LoginTests" />
        </classes>
    </test>

    <!-- Test for Firefox -->
    <test name="Firefox Tests" verbose="2">
        <parameter name="browserType" value="firefox" />
        <classes>
            <class name="puma.tests.HomePageTests" />
            <class name="puma.tests.LoginTests" />
        </classes>
    </test>

    <!-- Test for Edge -->
    <test name="Edge Tests" verbose="2">
        <parameter name="browserType" value="edge" />
        <classes>
            <class name="puma.tests.HomePageTests" />
            <class name="puma.tests.LoginTests" />
        </classes>
    </test>

</suite>
